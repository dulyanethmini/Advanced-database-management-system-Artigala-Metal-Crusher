@page
@model Project.Pages.Operator.CreateModel
@{
    ViewData["Title"] = "New Operator";
}

<br>
<h2>New Operator</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label asp-for="Operator.Operator_id" class="col-sm-3 col-form-label">Operator ID</label>
        <div class="col-sm-6">
            <input asp-for="Operator.Operator_id" class="form-control" />
            <span asp-validation-for="Operator.Operator_id" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Operator.Contact_number" class="col-sm-3 col-form-label">Contact Number</label>
        <div class="col-sm-6">
            <input asp-for="Operator.Contact_number" class="form-control" />
            <span asp-validation-for="Operator.Contact_number" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Operator.Password" class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input asp-for="Operator.Password" class="form-control" />
            <span asp-validation-for="Operator.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Operator.Address" class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input asp-for="Operator.Address" class="form-control" />
            <span asp-validation-for="Operator.Address" class="text-danger"></span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.SuccessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Operator/Index" role="button">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
