@using System.Data.SqlClient;
@{

    try
    {
        String Customer_id = Request.Query["Customer_id"];

        String connectionString = "Data Source=.\\sqlexpress;Initial Catalog=Project;Integrated Security=True";
        using (SqlConnection connection = new SqlConnection(connectionString))
        {
            connection.Open();
            String sql = "DELETE FROM Customer WHERE Customer_id=@Customer_id";
            using (SqlCommand command = new SqlCommand(sql, connection))
            {
                command.Parameters.AddWithValue("@Customer_id", Customer_id);
                command.ExecuteNonQuery();

            }
        }
    }

    catch (Exception ex)
    {
        
    }
}

